
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

@section Styles{
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/index.css">
    <link href="~/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!---字型-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@300&display=swap" rel="stylesheet">

    <style>
        /*容器垂直置中*/
        body {
            height: 100vh;
            /* 設定容器高度為視窗高度，確保垂直置中的效果 */
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #e5d27891;
            background-image: linear-gradient(to top, #fbdfa7, #ffebeb);
        }

        .bg-login-image {
            background: url(./images/2267272.jpg);
            background-position: center;
            background-size: cover;
        }

        .btn-user {
            background-image: linear-gradient(to right, #ff00e9, #00ebff);
            /* 設定漸層方向 (to right 表示水平向右) 和漸層顏色起始終止點 */
            border: none;
            /* 清除按鈕邊框，視情況使用 */
            color: white;
            /* 按鈕文字顏色，視情況使用 */
            padding: 10px 20px;
            /* 按鈕內間距，視情況使用 */
            border-radius: 5px;
            /* 圓角設定，視情況使用 */
        }

        @@media screen and (min-width: 1200px) and (max-width: 1400px) {
            .login-right-card {
                margin: 1.8rem !important;
            }
        }
    </style>
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-10 col-xl-7 col-lg-9 col-md-8 col-sm-10">
            <div class="card" style="box-shadow: 0 1rem 3rem rgba(0, 0, 0, .175) !important;">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                        <div class="col-lg-6">
                            <div class="login-right-card p-3 m-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                </div>
                                <form class="user">
                                    <div class="form-group mb-3">
                                        <input type="email" class="form-control form-control-user"
                                               id="exampleInputEmail" aria-describedby="emailHelp" placeholder="帳號"
                                               style="border-radius: 30px;">
                                    </div>
                                    <div class="form-group mb-3">
                                        <input type="password" class="form-control form-control-user"
                                               id="exampleInputPassword" placeholder="密碼" style="border-radius: 30px;">
                                    </div>
                                    <a href="javascript:;" class="btn btn-primary btn-user btn-block"
                                       style="width: 100%;border-radius: 30px;">
                                        登入
                                    </a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/index.js"></script>
}
