@{
    ViewData["Title"] = "News";
}

@section Styles{

    <link rel="stylesheet" href="~/css/forNews.css">
}

<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>最新消息</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">首頁</a></li>
                    <li class="breadcrumb-item active">最新消息</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- 開始公告頁 -->

<div class="container mt-4 mb-4">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="catcha-tab" data-toggle="tab" data-target="#catcha" type="button" role="tab" aria-controls="catcha" aria-selected="true">商城公告</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="game-tab" data-toggle="tab" data-target="#game" type="button" role="tab" aria-controls="game" aria-selected="false">遊戲公告</button>
        </li>
    </ul>

    <div class="tab-content" id="myTabContent">
        <div class="tab-pane show active" id="catcha" role="tabpanel" aria-labelledby="catcha-tab">

            <div class="container mt-4">
                <a asp-controller="ShopNews" asp-action="NewsContent">
                    <div class="row  justify-content-between clickable-row pt-3 pb-3">
                        <div class="col">
                            <div class="d-flex align-items-center thumbanil-p ">
                                <img src="https://s1.pearlcdn.com/NAEU/Upload/thumbnail/2021/357BNSVET5PK6LX820210331143820744.400x225.jpg"
                                     alt="..." class="img-thumbnail">
                                <div class="d-flex flex-column ms-5 text-start ">
                                    <h1>Hello</h1>
                                    <p>hahaha</p>
                                </div>
                            </div>
                        </div>

                        <div class="col align-self-center text-end">
                            <div class="d-flex flex-column">
                                <span class="news-date">2023/8/23</span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <div class="tab-pane fade" id="game" role="tabpanel" aria-labelledby="game-tab">

            <div class="container mt-4">
                <a asp-controller="ShopNews" asp-action="NewsContent">
                    <div class="row  justify-content-between clickable-row pt-3 pb-3">
                        <div class="col">
                            <div class="d-flex align-items-center thumbanil-p ">
                                <img src="https://s1.pearlcdn.com/NAEU/Upload/thumbnail/2021/357BNSVET5PK6LX820210331143820744.400x225.jpg"
                                     alt="..." class="img-thumbnail">
                                <div class="d-flex flex-column ms-5 text-start ">
                                    <h1>Hello</h1>
                                    <p>hahaha</p>
                                </div>
                            </div>
                        </div>

                        <div class="col align-self-center text-end">
                            <div class="d-flex flex-column">
                                <span class="news-date">2023/8/24</span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- 結束公告頁 -->
@section ScriptsForAfter{
    <!-- ALL JS FILES -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- ALL PLUGINS -->

    <script src="~/js/forNews.js"></script>
}
