
@{
    ViewData["Title"] = "Service";
    Layout = "~/Views/Shared/CMS_Layout.cshtml";
}

@section Styles{

}

<div class="middle-content">

    <h2 class="mt-3">客服回覆管理</h2>


    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <!--表格-->
                <table id="service-table" class="table table-striped nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <!-- <th>序號</th> -->
                            <!-- 回覆ID Reply ID
                            客訴案件ID Complaint Case ID
                            訊息(接收者)內容 Message (Recipient) Content
                            接收者ID(官方) Receiver ID (Official)
                            發送時間 Sent Time -->

                            <th>回覆ID</th>
                            <th>客訴案件ID</th>
                            <th>訊息(接收者)內容</th>
                            <th>接收者ID(官方)</th>
                            <th>發送時間</th>
                            <th>新增回覆內容??</th>
                            <th>新增狀態??</th>
                            <th>修改</th>
                            <th>回覆</th>
                            <th>刪除</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <!-- <td>1</td> -->
                            <td>1</td>
                            <td>001</td>
                            <td>請問怎麼去首頁?</td>
                            <td>管理員1</td>
                            <td>2023/08/03</td>
                            <td>回覆內容</td>
                            <td>待處理or已解決</td>
                            <td>
                                <button class="btn btn-success">待處理</button>｜<button class="btn btn-danger">
                                    已解決
                                </button>
                            </td>
                            <td>
                                <button class="btn btn-primary" data-bs-toggle="modal"
                                        href="#exampleModalToggle2" role="button">
                                    回覆
                                </button>
                            </td>
                            <td>
                                <button class="btn" onclick="userDelete()">
                                    <a href="#" id="b5">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </button>
                            </td>
                        </tr>


                        <!--回覆彈出視窗-->
                        <div class="modal fade" id="exampleModalToggle2" aria-hidden="true"
                             aria-labelledby="exampleModalToggleLabel" tabindex="-1">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalToggleLabel">編輯 Edit</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="tab-content" id="nav-tabContent">
                                            <div class="tab-pane fade show active"
                                                 id="member-edit-nav-home">
                                                <form>
                                                    <div class="form-group">
                                                        <label for="w3review">問題內容：</label>
                                                        <textarea class="form-control" id="w3review"
                                                                  name="w3review" rows="4" cols="50" readonly
                                                                  disabled>At w3schools.com you will learn how to make a website. They offer free tutorials in all web development technologies.
                                                                    </textarea>
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="exampleFormControlTextarea1"
                                                               class="form-label">回覆：</label>
                                                        <textarea class="form-control"
                                                                  id="exampleFormControlTextarea1"
                                                                  rows="3"></textarea>
                                                    </div>

                                                    <button class="btn btn-danger btn-block mt-4"
                                                            style="width: 100%;">
                                                        儲存
                                                    </button>
                                                </form>
                                            </div>
                                            <div class="tab-pane fade" id="member-edit-nav-paper">
                                                <p>顯示優惠券 | <button>刪除</button></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--編輯彈出視窗-->
                    </tbody>
                </table>
                <!--表格-->
            </div>
        </div>
    </div>

</div>

@section Scripts{
    <script>
        new DataTable('#service-table', {
            responsive: true,

            //========隱藏某一欄
            // columnDefs: [
            // {
            //     target: 10,
            //     visible: false,
            //     searchable: false
            // },
            // {
            //     target: 11,
            //     visible: false
            // }
            // ]
        });

        function userDelete() {
            Swal.fire({
                title: '確定要刪除嗎?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Deleted!',
                        'Your file has been deleted.',
                        'success'
                    )
                }
            })
        }
    </script>
}
