
@{
    ViewData["Title"] = "AdminManage";
    Layout = "~/Views/Shared/CMS_Layout.cshtml";
}


@section Styles{
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/index.css">
    <link href="fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!---字型-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@300&display=swap" rel="stylesheet">

    <!--DATATABLE-->
    <link rel="stylesheet" href="~/css/cdnjs.cloudflare.com_ajax_libs_twitter-bootstrap_5.3.0_css_bootstrap.min.css">
    <link rel="stylesheet" href="~/css/cdn.datatables.net_1.13.6_css_dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="~/css/cdn.datatables.net_responsive_2.5.0_css_responsive.bootstrap5.min.css">
}

<div class="middle-content">

    <h2 class="mt-3">管理員</h2>


    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <!--表格-->
                <table id="admin-table" class="table table-striped nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <!-- <th>序號</th> -->
                            <th>ID</th>
                            <th>姓名</th>
                            <th>帳號</th>
                            <th>最後登入</th>
                            <th>編輯</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <!-- <td>1</td> -->
                            <td>1</td>
                            <td>管理員1</td>
                            <td>admin@yahoo.com.tw</td>
                            <td>2023-06-29</td>
                            <td>
                                <a href="#">
                                    <button class="btn" data-bs-toggle="modal"
                                            href="#exampleModalToggle" role="button">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                </a>
                            </td>
                        </tr>


                        <!--編輯彈出視窗-->
                        <div class="modal fade" id="exampleModalToggle" aria-hidden="true"
                             aria-labelledby="exampleModalToggleLabel" tabindex="-1">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalToggleLabel">編輯 Edit</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <!--內容表單-->
                                        <form>
                                            <div class="form-group">
                                                <label>ID</label>
                                                <input type="text" class="form-control" readonly disabled>
                                            </div>
                                            <div class="form-group">
                                                <label>姓名</label>
                                                <input type="text" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label>帳號</label>
                                                <input type="email" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label>密碼</label>
                                                <input type="password" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label>確認密碼</label>
                                                <input type="password" class="form-control">
                                            </div>

                                            <button type="submit" class="btn btn-primary btn-block" style="width: 100%;">儲存</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </tbody>
                </table>
                <!--表格-->

            </div>
        </div>
    </div>

</div>


@section Scripts{
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/index.js"></script>

    <!--DATATABLE-->
    <script src="~/js/cdn.datatables.net_1.13.6_js_jquery.dataTables.min.js"></script>
    <script src="~/js/cdn.datatables.net_1.13.6_js_dataTables.bootstrap5.min.js"></script>
    <script src="~/js/cdn.datatables.net_responsive_2.5.0_js_dataTables.responsive.min.js"></script>
    <script src="~/js/cdn.datatables.net_responsive_2.5.0_js_responsive.bootstrap5.min.js"></script>

    <script>
