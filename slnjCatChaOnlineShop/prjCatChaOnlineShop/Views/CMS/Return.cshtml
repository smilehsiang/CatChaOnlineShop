
@{
    ViewData["Title"] = "Return";
    Layout = "~/Views/Shared/CMS_Layout.cshtml";
}

@section Styles{
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/index.css">
    <link href="~/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!---字型-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@300&display=swap" rel="stylesheet">

    <!--DATATABLE-->
    <link rel="stylesheet" href="~/css/cdnjs.cloudflare.com_ajax_libs_twitter-bootstrap_5.3.0_css_bootstrap.min.css">
    <link rel="stylesheet" href="~/css/cdn.datatables.net_1.13.6_css_dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="~/css/cdn.datatables.net_responsive_2.5.0_css_responsive.bootstrap5.min.css">
}

<div class="middle-content">

    <h2 class="mt-3">退換貨管理</h2>


    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <!--表格-->
                <table id="SReturn-table" class="table table-striped nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <!-- <th>序號</th> -->
                            <th>訂單ID</th>
                            <th>退換貨日期</th>
                            <th>退換貨原因</th>
                            <th>狀態</th>
                            <th>詳細資料</th>
                            <th>編輯</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <!-- <td>1</td> -->
                            <td>1</td>
                            <td>2023/08/03</td>
                            <td>商品品質問題</td>
                            <td>處理中</td>
                            <td>
                                <a href="#">
                                    <button class="btn btn-success" data-bs-toggle="modal"
                                            href="#orderDetailModalToggle" role="button">
                                        訂單明細
                                    </button>
                                </a>
                            </td>
                            <td>
                                <a href="#">
                                    <button class="btn" data-bs-toggle="modal"
                                            href="#returnEditModalToggle" role="button">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                </a>
                            </td>
                        </tr>


                        <!--編輯彈出視窗-->
                        <div class="modal fade" id="returnEditModalToggle" aria-hidden="true"
                             aria-labelledby="exampleModalToggleLabel" tabindex="-1">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalToggleLabel">編輯 Edit</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <!--內容表單-->
                                        <div class="row">

                                            <div class="col-md-6">
                                                <label>ID</label>
                                                <input type="text" class="form-control" readonly disabled>
                                            </div>
                                            <div class="col-md-6">
                                                <label>退換貨原因</label>
                                                <select class="form-select">
                                                    <option value="">商品品質問題</option>
                                                    <option value="">不符合期望</option>
                                                    <option value="">送錯商品</option>
                                                    <option value="">重複運送商品</option>
                                                    <option value="">訂單問題</option>
                                                    <option value="">售後服務問題</option>
                                                    <option value="">改變主意</option>
                                                    <option value="">其他原因</option>
                                                </select>
                                            </div>
                                            <div class="col-md-6">
                                                <label>退換貨日期</label>
                                                <input type="text" class="form-control" readonly disabled>
                                            </div>
                                            <div class="col-md-6">
                                                <label>狀態</label>
                                                <select class="form-select">
                                                    <option value="">待處理</option>
                                                    <option value="">審核中</option>
                                                    <option value="">已批准</option>
                                                    <option value="">待退貨</option>
                                                    <option value="">待換貨</option>
                                                    <option value="">退貨中</option>
                                                    <option value="">換貨中</option>
                                                    <option value="">已完成</option>
                                                    <option value="">取消</option>
                                                </select>
                                            </div>

                                            <button type="submit" class="mt-3 btn btn-primary btn-block"
                                                    style="width: 100%;">
                                                儲存
                                            </button>
                                        </div>
                                        <!--內容表單-->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </tbody>
                </table>
                <!--表格-->
                <!---詳細資料model-->
                <div class="modal fade" id="orderDetailModalToggle" aria-hidden="true"
                     aria-labelledby="exampleModalToggleLabel" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title bg-dark text-white" id="exampleModalToggleLabel">
                                    訂單明細
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-6" style="border-right: 1px solid #000;">
                                        <p>ID</p>
                                        <p>訂購人</p>
                                        <p>收件人：XXX</p>
                                        <p>收件地址：</p>
                                        <p>收件電話：</p>
                                        <p>收件地址：</p>
                                        <p>優惠券</p>
                                        <p>付款方式</p>
                                        <p>確認配送類別?</p>
                                        <p>成立日期</p>
                                        <p>最後更新</p>
                                        <p>狀態</p>
                                    </div>
                                    <div class="col-6">
                                        <p>產品名稱：XXX</p>
                                        <p>產品價格：XXX</p>
                                        <p>產品數量：XXX</p>
                                        <p>小計：XXX</p>
                                        <p>運費：XXX</p>
                                        <p>全館優惠?：XXX</p>
                                        <p>折抵紅利：XXX</p>
                                        <p>優惠券?：XXX</p>
                                        <p>總金額：XXX</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!---詳細資料model-->

            </div>
        </div>
        </div>
    </div>

@section Scripts{
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/index.js"></script>

    <!--DATATABLE-->
    <script src="~/js/cdn.datatables.net_1.13.6_js_jquery.dataTables.min.js"></script>
    <script src="~/js/cdn.datatables.net_1.13.6_js_dataTables.bootstrap5.min.js"></script>
    <script src="~/js/cdn.datatables.net_responsive_2.5.0_js_dataTables.responsive.min.js"></script>
    <script src="~/js/cdn.datatables.net_responsive_2.5.0_js_responsive.bootstrap5.min.js"></script>

    <script>
        new DataTable('#SReturn-table', {
            responsive: true,
        });
    </script>
}

