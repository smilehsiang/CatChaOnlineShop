    <!-- 引入SCEditor的JavaScript -->
    <script src="~/newsEditor/minified/sceditor.min.js"></script>
    <script src="~/newsEditor/minified/formats/bbcode.js"></script>
    <script src="~/newsEditor/minified/formats/xhtml.js"></script>
    <script src="~/newsEditor/languages/de.js"></script>

    <style>
        /* 原始圖片的視窗 */
        .image-popup {
            display: none;
            position: absolute;
            top: 0;
            left: 150px;
            /* 將視窗放在圖片右側 */
