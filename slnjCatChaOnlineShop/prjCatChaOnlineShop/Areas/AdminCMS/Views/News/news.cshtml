@model prjCatChaOnlineShop.Models.ViewModels.CNewsModel

@{
    ViewData["Title"] = "News";
    Layout = "~/Areas/AdminCMS/Views/Shared/CMS_Layout.cshtml";
}

@section Styles{
    <!--SCEditor-->
    <!-- 引入SCEditor的CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/newsEditor/minified/themes/default.min.css">
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">

    <!-- 引入jQuery -->
    <!-- 引入SCEditor的JavaScript -->

    <style>
        /* 原始圖片的視窗 */
        .image-popup {
            display: none;
            position: absolute;
            top: 0;
            left: 150px;
            /* 將視窗放在圖片右側 */
            /* max-width: 100%; */
            /* 視窗寬度 */
            background-color: #aaa;
            padding: 10px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
            z-index: 1;
        }

            .image-popup img {
                width: 300px;
            }

        /* 縮略圖片的樣式 */
        .thumbnail-image {
            /* position: relative; */
            cursor: pointer;
            /* 將鼠標指針設置為手型以指示圖片可懸停 */
        }

        .test {
            position: relative;
        }
    </style>
}

<div class="middle-content">

    <div class="row align-items-center">
        <div class="col-6">
            <h2 class="mt-3">公告管理</h2>
        </div>
        <div class="col-6 text-end mt-3">
            <button class="btn btn-primary" data-bs-toggle="modal" href="#addNewsModalToggle"
                    role="button">
                新增公告
            </button>
        </div>
    </div>

    <!---新增公告 modal-->
    <div class="modal fade" id="addNewsModalToggle" aria-hidden="true"
         aria-labelledby="exampleModalToggleLabel" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalToggleLabel">新增公告</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <!-- <label>ID：</label> -->
                        <input type="hidden" class="form-control" disabled readonly>
                    </div>

                    <div class="d-flex">
                        <label class="col-form-label">公告標題：</label>
                        <div class="d-inline-flex">
                            <input type="text" id="newsTitle" class="form-control w-100" name="AnnouncementTitle">
                            <select class="form-select" id="announcementTypeSelect" name="AnnouncementTypeId ">
                                <option selected>請選擇公告類型</option>
                                @foreach (var News in Model.NewsType)
                                {
                                    <option value="@News.AnnouncementTypeId">@News.AnnouncementTypeName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col">
                        <label>公告內文：</label>
                        <div id="summernote"></div>
                    </div>
                    <div class="d-flex mt-2 ">
                        <label for="date">
                            選擇發布時間：
                        </label>
                        <input type="datetime-local" id="PublishTime" name="PublishTime" min="" />
                    </div>
                    <div class="d-flex mt-2 ">
                        <label for="date">
                            選擇結束時間：
                        </label>
                        <input type="datetime-local" id="PublishEndTime" name="PublishEndTime" min="" />
                    </div>
                    <div class="d-flex mt-2 ">
                        <label for="form-check-input">是否置頂：</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="PinToTop" name="PinToTop">
                        </div>
                    </div>
                    <div class="d-flex mb-3 align-items-center mt-3">
                        <label>標題圖片：</label>
                        <div class="d-inline-flex">
                            <input type="file" id="AnnouncementImageHeader" class="form-control" name="ImageHeader">
                        </div>
                    </div>


                    <button class="btn btn-danger btn-block" style="width: 100%;" id="submitButton">儲存</button>
                </div>
            </div>
        </div>
    </div>
    <!---新增公告 modal-->

    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <!--表格-->
                <table id="GProduct-table" class="table table-striped nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <!-- <th>序號</th> -->
                            <th>公告ID</th>
                            <th>公告標題</th>
                            <th>標題圖片</th>
                            <th>公告類型</th>
                            <th>是否隱藏</th>
                            <th>公告時間</th>
                            <th>結束時間</th>
                            <th>編輯/刪除</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <!-- <td>1</td> -->
                            <td class="align-middle text-center">1</td>
                            <td class="align-middle text-center">標題1</td>
                            <td class="align-middle text-center">
                                <img src="~/images/add-img-01.jpg"
                                     width="200" height="100" class="thumbnail-image">
                            </td>
                            <td class="align-middle text-center">1</td>
                            <td class="align-middle text-center">是</td>
                            <td class="align-middle text-center">是</td>
                            <td class="align-middle text-center">是</td>
                            <td class="align-middle text-center">
                                <a href="#">
                                    <button class="btn" data-bs-toggle="modal"
                                            href="#exampleModalToggle" role="button">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                </a> | <button class="btn"
                                               onclick="userDelete()">
                                    <a href="#" id="b5">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </button>
                            </td>
                        </tr>





                        <!--編輯彈出視窗-->
                        <div class="modal fade" id="exampleModalToggle" aria-hidden="true"
                             aria-labelledby="exampleModalToggleLabel" tabindex="-1">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalToggleLabel">編輯 Edit</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <!--內容表單-->
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>ID</label>
                                                <input type="text" class="form-control" readonly disabled>
                                            </div>
                                            <div class="col-md-6">
                                                <label>公告標題</label>
                                                <input type="text" class="form-control">
                                            </div>
                                            <div class="col-md-6">
                                                <label>公告類型ID</label>
                                                <select class="form-control">
                                                    <option value="貓">1</option>
                                                    <option value="狗">2</option>
