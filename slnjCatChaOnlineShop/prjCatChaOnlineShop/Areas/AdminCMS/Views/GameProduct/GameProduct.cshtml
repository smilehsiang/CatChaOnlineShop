
@{
    ViewData["Title"] = "GameProduct";
    Layout = "~/Views/Shared/CMS_Layout.cshtml";
}

@section Styles{
    <style>
        /* 原始圖片的視窗 */
        .image-popup {
            display: none;
            position: absolute;
            top: 0;
            left: 150px;
            /* 將視窗放在圖片右側 */
            /* max-width: 100%; */
            /* 視窗寬度 */
            background-color: #aaa;
            padding: 10px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
            z-index: 1;
        }

            .image-popup img {
                width: 300px;
            }

        /* 縮略圖片的樣式 */
        .thumbnail-image {
            /* position: relative; */
            cursor: pointer;
            /* 將鼠標指針設置為手型以指示圖片可懸停 */
        }

        .test {
            position: relative;
        }
    </style>
}

<div class="middle-content">

    <div class="row align-items-center">
        <div class="col-6">
            <h2 class="mt-3">遊戲商品管理</h2>
        </div>
        <div class="col-6 text-end mt-3">
            <button class="btn btn-primary" data-bs-toggle="modal" href="#addGProductModalToggle" role="button">
                新增遊戲商品
            </button>
        </div>
    </div>

    <!---新增遊戲商品 modal-->
    <div class="modal fade" id="addGProductModalToggle" aria-hidden="true"
         aria-labelledby="exampleModalToggleLabel" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalToggleLabel">新增遊戲商品</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <!-- <label>ID：</label> -->
                            <input type="hidden" class="form-control" disabled
                                   readonly>
                        </div>

                        <div class="form-group">
                            <label>名稱：</label>
                            <input type="text" class="form-control">
                        </div>

                        <div class="form-group">
                            <label>描述：</label>
                            <input type="text" class="form-control">
                        </div>

                        <div class="form-group">
                            <label>類別：</label>
                            <select class="form-control">
                                <option value="GameProductCatgory1">貓咪</option>
                                <option value="GameProductCatgory2">玩具</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label>價格：</label>
                            <input type="text" class="form-control">
                        </div>

                        <div class="form-group">
                            <label>已被購買數量：</label>
                            <input type="text" class="form-control">
                        </div>

                        <div class="form-group">
                            <label>剩餘數量：</label>
                            <input type="text" class="form-control">
                        </div>

                        <div class="form-group">
                            <label>抽獎機率：</label>
                            <input type="text" class="form-control">
                        </div>


                        <div class="col-md-12">
                            <label>圖片</label>
                            <input type="file" class="form-control">
                        </div>

                        <button class="btn btn-danger btn-block"
                                style="width: 100%;">
                            儲存
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!---新增遊戲商品 modal-->

    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <!--表格-->
                <table id="GProduct-table" class="table table-striped nowrap" style="width:100%">
                    <thead>
                        <tr>
