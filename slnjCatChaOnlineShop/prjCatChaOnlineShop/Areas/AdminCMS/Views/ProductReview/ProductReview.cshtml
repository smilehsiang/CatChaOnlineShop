
@{
    ViewData["Title"] = "ProductReview";
    Layout = "~/Views/Shared/CMS_Layout.cshtml";
}

@section Styles{

}

<div class="middle-content">

    <h2 class="mt-3">產品評論管理</h2>


    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <!--表格-->
                <table id="PReview-table" class="table table-striped nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <!-- <th>序號</th> -->
                            <th>ID</th>
                            <th>產品名稱</th>
                            <th>評分</th>
                            <th>評論表ID</th>
                            <th>評論會員</th>
                            <th>新增狀態??</th>
                            <th>回覆</th>
                            <th>刪除</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <!-- <td>1</td> -->
                            <td>1</td>
                            <td>貓砂</td>
                            <td>10</td>
                            <td>001</td>
                            <td>A小姐</td>
                            <td>公開or隱藏</td>
                            <td>
                                <button class="btn btn-primary" data-bs-toggle="modal"
                                        href="#exampleModalToggle2" role="button">
                                    詳細資料
                                </button>
                            </td>
                            <td>
                                <button class="btn" onclick="userDelete()">
                                    <a href="#" id="b5">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </button>
                            </td>
                        </tr>


                        <!--回覆彈出視窗-->
                        <div class="modal fade" id="exampleModalToggle2" aria-hidden="true"
                             aria-labelledby="exampleModalToggleLabel" tabindex="-1">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalToggleLabel">編輯 Edit</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="tab-content" id="nav-tabContent">
                                            <div class="tab-pane fade show active"
                                                 id="member-edit-nav-home">
                                                <form>
                                                    <div class="form-group">
                                                        <label for="w3review">評論內容：</label>
                                                        <textarea class="form-control" id="w3review" name="w3review" rows="4" cols="50" readonly disabled>At w3schools.com you will learn how to make a website. They offer free tutorials in all web development technologies.
                                                                    </textarea>
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="w3review">狀態：</label>
                                                        <select name="" id="" class="form-select">
                                                            <option value="">公開</option>
                                                            <option value="">隱藏</option>
                                                        </select>
                                                    </div>

                                                    <button class="btn btn-danger btn-block mt-4"
                                                            style="width: 100%;">
                                                        儲存
                                                    </button>
                                                </form>
                                            </div>
                                            <div class="tab-pane fade" id="member-edit-nav-paper">
                                                <p>顯示優惠券 | <button>刪除</button></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--編輯彈出視窗-->
                    </tbody>
                </table>
                <!--表格-->
            </div>
        </div>
    </div>

</div>

@section Scripts{
    <script>
        new DataTable('#PReview-table', {
            responsive: true,

            //========隱藏某一欄
            // columnDefs: [
            // {
            //     target: 10,
            //     visible: false,
            //     searchable: false
            // },
            // {
            //     target: 11,
            //     visible: false
            // }
            // ]
        });

        function userDelete() {
            Swal.fire({
                title: '確定要刪除嗎?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Deleted!',
                        'Your file has been deleted.',
                        'success'
                    )
                }
            })
        }
    </script>
}

